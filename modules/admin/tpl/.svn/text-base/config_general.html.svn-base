<script type="text/javascript">
jQuery(function($){
	$('#favicon').change(function(){
		var re_favicon = /[^.]+\.ico$/
		if(re_favicon.test($(this).val()) != true){
			alert('*.ico {$lang->msg_possible_only_file}');
			return false;
		}
	});
	$('#mobicon').change(function(){
		var re_favicon = /[^.]+\.png$/
		if(re_favicon.test($(this).val()) != true){
			alert('*.png {$lang->msg_possible_only_file}');
			return false;
		}
	});
});
</script>
